<Shell
    x:Class="hadis.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:hadis"
    Title="hadis"
    
    Shell.NavBarIsVisible="False"
    Shell.TabBarBackgroundColor="{AppThemeBinding Light=White, Dark={StaticResource Gray900}}"
    
    Shell.TabBarForegroundColor="{AppThemeBinding Light={StaticResource Primary}, Dark=White}"
    
    Shell.TabBarUnselectedColor="{AppThemeBinding Light=Gray, Dark=LightGray}">
    <TabBar>
        
        <Tab Title="" Icon="vakitler.png">
            <ShellContent ContentTemplate="{DataTemplate local:MainPage}" />
        </Tab>
        <Tab Title="" Icon="kuran.png">
            <ShellContent ContentTemplate="{DataTemplate local:KuranPDF}" />
        </Tab>
        <Tab Title="" Icon="zikirmatik.png">
            <ShellContent ContentTemplate="{DataTemplate local:zikirmatik}" />
        </Tab>
        <Tab Title="" Icon="kiblesekme.png"> 
            <ShellContent ContentTemplate="{DataTemplate local:kible}" />
        </Tab>

    </TabBar>
</Shell>
